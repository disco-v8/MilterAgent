[Unit]
Description=MilterAgent Service
Documentation=https://github.com/disco-v8/MilterAgent
After=network.target
Before=postfix.service

[Service]
Type=simple
ExecStart=/usr/sbin/milter_agent
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
TimeoutStopSec=10s

[Install]
WantedBy=multi-user.target
